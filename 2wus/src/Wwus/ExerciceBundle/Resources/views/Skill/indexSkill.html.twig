{% extends 'WwusExerciceBundle::layout.html.twig' %}
{% block titre %}
	<div class="row">
		<div class="col-xs-12 titre">Skill</div>
	</div>
{% endblock %}
	
{% block body%}
	<div class="tampon"></div>
{% for skill in skills %}
	<div class="row">
		<a href="{{ path('wwus_skill_modif', {'id': skill.id} )}}"><div class="col-xs-offset-1 col-xs-9 intitule">Compétence n°{{ skill.id }} : {{ skill.competence}}</div></a>
		<a href="{{ path('wwus_skill_supp', {'id': skill.id} )}}"><div class="col-xs-1 btn btn-danger">Supp</div></a>
	</div>
{% endfor %}
	<div class="tampon"></div>
	<div class="row ">
		<a href="{{ path('wwus_skill_new')}}"><div class="col-xs-offset-4 col-xs-4 btn btn-primary ">Nouvelle Compétence</div></a>
	</div>
{% endblock %}