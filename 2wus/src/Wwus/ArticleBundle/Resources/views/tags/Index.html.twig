{% extends "WwusArticleBundle::layout.html.twig" %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/wwusarticle/css/tags.css') }}">
{% endblock %}

{% block titre %}
    <p>TAGS</p>
{% endblock %}

{% block contenu %}
    <div class="tampon">
        {% for message in app.session.flashbag.get('info') %}
            <div class="alert alert-success center">{{ message }}</div>
        {% endfor %}
    </div>
    {% for tag in tags %}
        <a href="{{ path('wwus_tags_modif', { 'id': tag.id }) }}">
            <div class="col-xs-6 vignette">
                <div class="row"> {{ tag.couleur }} </div>
                <div class="row"> {{ tag.categorie }} </div>
            </div>
        </a>
    {% endfor %}
{% endblock %}

{% block pied %}
    <div class="col-xs-4 pied-gauche"><a href="{{ path('wwus_article_homepage') }}"><img class="img-pied" src="{{ asset('bundles/wwusarticle/image/pied-gauche-retour.png') }} " alt=""></a></div>
    <div class="col-xs-4"></div>
    <div class="col-xs-4 pied-droite"><a href="{{ path('wwus_tags_new') }}"><img class="img-pied" src="{{ asset('bundles/wwusarticle/image/pied-droit-ajout.png') }}"></a></div>

{% endblock %}